<%= form_with(model: @category, local: true) do |form| %>

  <%= render 'common/errors', resource: @category %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <p>
    <div class="actions">
      <%= form.submit "#{ @category.new_record? ? 'Создать' : 'Изменить' }" %>
    </div>
  </p>

<% end %>
